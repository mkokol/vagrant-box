<?xml version="1.0" encoding="UTF-8"?>
<project name="PhotoPrint" default="main" basedir=".">

    <if>
        <not><isset property="env" /></not>
        <then><property name="env" value="dev" /></then>
    </if>

    <property file="./db-patches/properties/${env}.ini" />

    <php function="preg_replace" returnProperty="consoleSrcPath">
        <param value="/(Dropbox\ \(Personal\))+/"/>
        <param value="Dropbox\\ \\(Personal\\)"/>
        <param value="${project.basedir}"/>
    </php>

    <target name="main">
        <echo message="+------------------------------------------+"/>
        <echo message="| DB patches  for PhotoPrint.in.ua         |"/>
        <echo message="+------------------------------------------+"/>

        <phing phingfile="${project.basedir}/db-patches/phing/database.xml" target="database" />
    </target>

</project>
