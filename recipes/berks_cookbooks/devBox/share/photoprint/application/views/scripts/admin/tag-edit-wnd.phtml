                        $('tr.tag-<?php echo $this->tag->id; ?> td:eq(3)').html($('#ua').val());
                        $('tr.tag-<?php echo $this->tag->id; ?> td:eq(4)').html($('#ru').val());
                    }
                    mboxRemove();
                });
                return false;
            });
        });
    </script>

    <div id="popup-wnd-edit-tag">
        <div class="popup-wnd-header">
            <?php echo ($this->tag->id) ? $this->t->_('edit_tag') : $this->t->_('new_tag'); ?>
