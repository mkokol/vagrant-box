    <script>
        $(document).ready(function(){
            $('#edit-tag-form').submit(function() {
                $(this).ajaxSubmit(function(){
                    if($('tr.tag-<?php echo $this->tag->id; ?> td:eq(1)').length) {
                        $('tr.tag-<?php echo $this->tag->id; ?> td:eq(1)').html(
                            $('input:radio[name=status]:checked').val()
                        );
